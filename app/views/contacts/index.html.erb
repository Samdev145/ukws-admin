<div class="central-items">
  <h1>Contacts Search</h1>

  <%= form_tag contacts_path, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Email" %>
      
      <%= submit_tag('Find Contact', name: nil, class: "btn btn-primary")  %>
    </div>
  <% end %>

  <% if @contacts %>
    <table>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Link</th>
      </tr>
      <% @contacts.each do |con| %>
        <tr>
          <td><%= con.full_name %></td>
          <td><%= con.email %></td>
          <td><%= button_to "Show Contact", contact_path(con.id), method: :get, class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>