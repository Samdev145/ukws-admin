<div class="container-fluid">
  <h1>Products</h1>

  <hr/>

  <div class="row">

    <div class="col-sm-7">
      <%= turbo_frame_tag "products" do %>
        <%= render @products %>
      <% end %>
    </div>

    <div class="col-sm-5">
      <%= turbo_frame_tag Product.new do %>
        <div class="button-wrap">
          <%= button_to "New Product", new_product_path, class: "btn btn-primary", method: :get  %>
        </div>
      <% end %>
    </div>
  </div>
</div>