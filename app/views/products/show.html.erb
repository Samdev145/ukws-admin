<h1>Product</h1>

<p>Name: <%= @product.name %></p>
<p>Type: <%= @product.record_type %></p>

<p>Main Photo</p>

<% if @product.main_photo.present? %>
  <div>
    <%= image_tag(@product.main_photo.variant(:small)) %>
  </div>
<% end %>

<p>Installed Photo</p>

<% if @product.installed_photo.present? %>
  <div>
    <%= image_tag(@product.installed_photo.variant(:small)) %>
  </div>
<% end %>

<% if @product.other_photos_attachments %>
  <p>Photos:</p>
  <div>
    <% @product.other_photos_attachments.each do |photo| %>
      <%= image_tag(photo.variant(:small)) %>
    <% end %>
  </div>
<% end %>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>