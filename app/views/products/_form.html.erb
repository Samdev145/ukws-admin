<%= form_with model: product do |form| %>
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_area :name, class: "form-control" %>
		<% product.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :record_type %>
		<%= form.select :record_type, ['water softener', 'tap'], class: "form-control" %>
		<% product.errors.full_messages_for(:type).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :main_photo %>
		<%= form.file_field :main_photo, class: "form-control" %>
		<% product.errors.full_messages_for(:main_photo).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :installed_photo %>
		<%= form.file_field :installed_photo, class: "form-control" %>
		<% product.errors.full_messages_for(:installed_photo).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :other_photos %>
		<%= form.file_field :other_photos, multiple: true, class: "form-control" %>
		<% product.errors.full_messages_for(:other_photos).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.submit :class => "btn btn-primary float-end" %>
	</div>
<% end %>