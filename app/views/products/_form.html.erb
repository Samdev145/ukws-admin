<%= form_with model: product do |form| %>
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_area :name, class: "form-control" %>
		<% product.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :record_type %>
		<%= form.text_area :record_type, class: "form-control" %>
		<% product.errors.full_messages_for(:type).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :photos %>
		<%= form.file_field :photos, multiple: true, class: "form-control" %>
		<% product.errors.full_messages_for(:photos).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.submit :class => "btn btn-primary float-end" %>
	</div>
<% end %>