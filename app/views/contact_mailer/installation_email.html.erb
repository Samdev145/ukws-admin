                            #{ paragraph("Our plumber <b>#{@installer.name}</b> will be with you on <b>#{@lead.installation_date}</b> between <b>#{@start_time.strftime("%I:%M")}-#{(@start_time + 30.minutes).strftime("%I:%M%P") }</b>") }
                          "
                        ) %>

                        <%= add_spacer %>

                        <%= row_double_column(
                          "
