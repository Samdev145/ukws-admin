<%= form_with model: employee do |form| %>
	<div>
		<%= form.label :name %><br>
		<%= form.text_area :name %>
		<% employee.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.label :calendar_id, 'Calendar ID' %><br>
		<%= form.text_area :calendar_id %>
		<% employee.errors.full_messages_for(:calendar_id).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.label :job %><br>
		<%= form.text_area :job %>
		<% employee.errors.full_messages_for(:job).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.label :introduction %><br>
		<%= form.text_area :introduction %>
		<% employee.errors.full_messages_for(:introduction).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.label :contact_number %><br>
		<%= form.text_area :contact_number %>
		<% employee.errors.full_messages_for(:contact_number).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.label :avatar %><br>
		<%= form.file_field :avatar %>
		<% employee.errors.full_messages_for(:avatar).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.submit %>
	</div>
<% end %>