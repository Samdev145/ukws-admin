<%= form_with model: employee do |form| %>
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_area :name, class: "form-control" %>
		<% employee.errors.full_messages_for(:name).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :email %>
		<%= form.text_area :email, class: "form-control" %>
		<% employee.errors.full_messages_for(:email).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :calendar_id, 'Calendar ID' %>
		<%= form.text_area :calendar_id, class: "form-control" %>
		<% employee.errors.full_messages_for(:calendar_id).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :job %>
		<%= form.text_area :job, class: "form-control" %>
		<% employee.errors.full_messages_for(:job).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :introduction %>
		<%= form.text_area :introduction, class: "form-control" %>
		<% employee.errors.full_messages_for(:introduction).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :contact_number %>
		<%= form.text_area :contact_number, class: "form-control" %>
		<% employee.errors.full_messages_for(:contact_number).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :internal %>
		<%= form.check_box :internal %>
		<% employee.errors.full_messages_for(:internal).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div class="form-group">
		<%= form.label :preferred_start_time %>
		<%= form.time_field :preferred_start_time, value: '08:00', class: "form-control" %>
		<% employee.errors.full_messages_for(:preferred_start_time).each do |message| %>
			<div><%= message %></div>
		<% end %>
    </div>

	<div class="form-group">
		<%= form.label :avatar, 'Picture' %>
		<%= form.file_field :avatar, class: "form-control" %>
		<% employee.errors.full_messages_for(:avatar).each do |message| %>
			<div><%= message %></div>
		<% end %>
	</div>

	<div>
		<%= form.submit :class => "btn btn-primary float-end" %>
	</div>
<% end %>
